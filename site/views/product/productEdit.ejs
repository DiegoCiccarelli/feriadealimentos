<%- include('../partials/head.ejs'); %>

<%- include('../partials/header.ejs'); %>

    <div id="contenedorProductCreateEdit">
        <h1>Editar Producto</h1>
        
        <form action="" method="POST" enctype="multipart/form-data">
                  
            <input type="text" name="nombre" id="nombre" placeholder="Nombre Producto" value="<%= product.nombre %>">
               
            <input type="number" name ="precioProducto" id="precio" placeholder="Precio" value="<%= product.precioProducto %>">

            <select name="estado" id="estado">
                <option value="Estado" >Estado</option>
                
                <% if(product.estado=="activo"){%>
                    <option value="Activo" selected >Activo</option>
                    <option value="Inactivo">Inactivo</option>
                <%}else{%>
                    <option value="Activo">Activo</option>
                    <option value="Inactivo" selected >Inactivo</option>
                <%}%>
           
                
            </select>
                
            <select name="categoria" id="categoria"> 
                <% if(product.categoria =="activo"){%>
                <option value="default">Categoria</option>
                <option value="Dulces Caseros">Dulces Caseros</option>
                <option value="Merienda">Merienda</option>
                <option value="Artesanias">Artesanias</option>
                   
            </select>

            <!--<input type="text" name="estado" id="estado" placeholder="Activo / Inactivo" value="<%= product.estado %>">
                
            <input type="text" name="Categoría" id="categoria" placeholder="Categoría" value="<%= product.categoria %>">-->
            

            <textarea rows="2" name="descripcionCorta" id="descripcionCorta" placeholder="Descripción Corta"><%= product.descripcionCorta %></textarea>
            <span></span>
            <textarea rows="14" name="descripcionLarga" id="descripcionLarga" placeholder="Descripción Larga"><%= product.descripcionLarga %></textarea>
            <span></span>
            
            <input type="file" name="imagenProducto" id="imagenProducto" placeholder="Subir Imágenes" value="<%= product.imagenProducto%>">
            <span></span>
            
            <!-- <div id="imagenesCargadas">
                <img src="/images/imagen-producto1.jpg">
                <img src="/images/imagen-miniatura2-producto1.jpg">
                <img src="/images/imagen-miniatura3-producto1.jpg">
            </div> -->
            
            <button class="claseButton" type="submit">Crear Producto</button>

        </form>

        
        
    </div>

    <%- include('../partials/footer.ejs'); %>