                <option value="inactivo">Inactivo</option>
            </select>
                
            <select name="categoria" id="categoria"> 
               
                <option value="default">Categoria</option>
                <option value="Dulces Caseros">Dulces Caseros</option>
                <option value="Merienda">Merienda</option>
                <option value="Artesanias">Artesanias</option>
                   
            </select>
          
            <textarea rows="2" name="descripcionCorta" id="descripcionCorta" placeholder="Descripción Corta"></textarea>
            <span></span>
            <textarea rows="14" name="descripcionLarga" id="descripcionLarga" placeholder="Descripción Larga"></textarea>
            <span></span>
            
            <input type="file" name="imagenProducto" id="imagenProducto" multiple>
            <span></span>
            
