        <h1>Nuevo Producto</h1>
        
        <form action="/products/productoNuevo" method="POST" enctype="multipart/form-data">
                  
            <input type="text" name="nombre" id="nombre" placeholder="Nombre Producto">
               
            <input type="number" name ="precioProducto" id="precio" placeholder="Precio">

