
<%- include('../partials/head.ejs'); %>

<%- include('../partials/header.ejs'); %>
    
        <div id="contenedorRegister">
        <h1>Editar Productor</h1>
        
        <% if(typeof errors != "undefined"){%>
        <div class="errorMessageForm">
        <% errors.forEach(element => {  %>
            <%if(element.msg !== "Invalid value"){ %>
        <p><%=element.msg%></p>
        <%}%>
        <% }) %>
        </div>
        <%}%>
        
        
        <form action="/productores/editar/<% if(typeof producer != "undefined"){%><%= producer.id %>
        <%}else if(typeof datos != "undefined"){ %>
            <%= datos.id %>
        <% } %>"
         method="POST" enctype="multipart/form-data">
           
            <p>Apellido</p>
           
            <input type="text" name="apellido" id="apellido" <% if(typeof producer != "undefined"){%>
                value="<%= producer.apellido_productor %>"
            <%}else if(typeof datos != "undefined"){ %>
                value="<%= datos.apellido %>"
            <% } %>>
        

            <p>Nombre</p>
           
            <input type="text" name="nombreProductor" id="nombre" <% if(typeof producer != "undefined"){%>
                value="<%= producer.nombre_productor %>"
            <%}else if(typeof datos != "undefined"){ %>
                value="<%= datos.nombreProductor %>"
            <% } %>>

            <p>Email</p>
           
            <input type="email" name="email" id="emailRegister" <% if(typeof producer != "undefined"){%>
                value="<%= producer.email_productor %>"
            <%}else if(typeof datos != "undefined"){ %>
                value="<%= datos.email %>"
            <% } %>>
           
            <p>Telefono</p>

            <input type="tel" name="telefono" <% if(typeof producer != "undefined"){%>
                value="<%= producer.telefono_productor %>"
            <%}else if(typeof datos != "undefined"){ %>
                value="<%= datos.telefono %>"
            <% } %>>

            <p>Domicilio</p>
            
            <input type="text" name="domicilio" <% if(typeof producer != "undefined"){%>
                value="<%= producer.domicilio_productor %>"
            <%}else if(typeof datos != "undefined"){ %>
                value="<%= datos.domicilio %>"
            <% } %>>

            <p>Nombre Emprendimiento</p>
            
            <input type="text" name="nombreEmprendimiento" <% if(typeof producer != "undefined"){%>
                value="<%= producer.nombre_emprendimiento %>"
            <%}else if(typeof datos != "undefined"){ %>
                value="<%= datos.nombreEmprendimiento %>"
            <% } %>>

            <p>Descripci√≥n Emprendimiento</p>
            
            <input type="text" name="descripcion" <% if(typeof producer != "undefined"){%>
                value="<%= producer.descripcion_productor %>"
            <%}else if(typeof datos != "undefined"){ %>
                value="<%= datos.descripcion %>"
            <% } %>>

            <p>Logotipo</p>

            <input type="file" name="logotipo">
            <% if(typeof producer != "undefined"){%>
                <% if (producer.logotipo != null){ %>
                     <img class="thumbnailImage" src="/images/producersLogos/<%= producer.logotipo %>">
                <% } %>    
            <% } %>

            <button class="claseButton" type="submit">Confirmar Cambios</button>

        </form>

        
    </div>
    <%- include('../partials/footer.ejs'); %>