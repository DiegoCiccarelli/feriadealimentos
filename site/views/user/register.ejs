
<%- include('../partials/head.ejs'); %>

<%- include('../partials/header.ejs'); %>
    
        <div class="contenedorForm">
        <h1>Registro</h1>
        
        <% if(typeof errors != "undefined"){%>
            <div class="errorMessageForm">
            <% errors.forEach(element => {  %>
                <%if(element.msg !== "Invalid value"){ %>
            <p><%=element.msg%></p>
            <%}%>
            <% }) %>
            </div>
            <%}%>
        
        <div class="errorMessageForm"></div>
        
        <form action="/usuarios/registro" method="POST" enctype="multipart/form-data">
           <div>
           
            <input type="text" name="apellido" id="apellido" placeholder="Apellido" <% if(typeof datos != "undefined"){ %>
                value="<%= datos.apellido %>"
            <% } %>>
        
           
            <input type="text" name="nombre" id="nombre" placeholder="Nombre" <% if(typeof datos != "undefined"){ %>
                value="<%= datos.nombre %>"
            <% } %>>
            </div>

           
            <input type="email" name="email" id="emailRegister" placeholder="Correo electronico" <% if(typeof datos != "undefined"){ %>
                value="<%= datos.email %>"
            <% } %>>
           
            <div>
           
            <input type="password" name="pass" id="pwdRegister" placeholder="Contraseña">

           
            <input type="password" name="repeatPass" id="repeatPwdRegister" placeholder="Repetir contraseña">
            </div>


            <input type="tel" id="telefono" name="telefono" placeholder="Telefono" <% if(typeof datos != "undefined"){ %>
                value="<%= datos.telefono %>"
            <% } %>>


            <input type="number" name="dni" id="dni" placeholder="DNI" <% if(typeof datos != "undefined"){ %>
                value="<%= datos.dni %>"
            <% } %>>

            <button class="claseButton" type="submit" id="btnRegister">Registrarme</button>

        </form>

        <a href="/usuarios/login">Ya tengo usuario y contraseña</a>
        
    </div>
    <script src="/js/register.js"></script>
    <%- include('../partials/footer.ejs'); %>