<%- include('../partials/head.ejs'); %>

<%- include('../partials/header.ejs'); %>
    
        <div id="contenedorRegister">
        <h1>Registro de nuevo Cliente</h1>

        
        <% if(typeof errors != "undefined"){ %>
            <% errors.forEach(element => {
                <%if(element.msg != "Invalid value"){ %>
                    <p><%= element.msg %></p>
                <%}%>
            <% }) %>
            <%}%>
        
        <form action="/usuarios/registro" method="POST" enctype="multipart/form-data">

           
            <p>Apellido</p>
           
            <input type="text" name="apellido" id="apellido">

            <p>Nombre</p>
           
            <input type="text" name="nombre" id="nombre">

            <p>Email</p>
           
            <input type="email" name="email" id="emailRegister">
           
            <p>Contraseña</p>
           
            <input type="password" name="pass" id="pwdRegister">

            <p>Repita Contraseña</p>
           
            <input type="password" name="repeatPass" id="repeatPwdRegister">

            <p>Telefono</p>

            <input type="tel" name="telefono">

            <p>DNI</p>

            <input type="number" name="dni">

            <p>Calle</p>
            
            <input type="text" name="calle">

            <p>Altura</p>

            <input type="text" name="altura">

            <p>Piso</p>

            <input type="text" name="piso">
            
            <p>Departamento</p>

            <input type="text" name="departamento">

            <p>Barrio</p>

            <input type="text" name="barrio">

            <p>Localidad</p>

            <input type="text" name="localidad">

            <p>Provincia</p>

            <input type="text" name="provincia">

            <p>Pais</p>

            <input type="text" name="pais">

            <p>Avatar</p>

            <input type="file" name="avatar">
            
            <!-- <div>
                
                <label for="aceptoTerminos"><a href="#">Acepto los términos y condiciones </a>   </label>
                <input type="checkbox" name="aceptoTerminos" id="aceptoTerminos">
            </div> -->

            <button class="claseButton" type="submit">Registrarme</button>

        </form>

        <a href="/usuarios/login">Ya tengo usuario y contraseña</a>
        
    </div>
    <%- include('../partials/footer.ejs'); %>