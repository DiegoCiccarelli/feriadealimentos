            >
        

            <p>Nombre</p>
           
            <input type="text" name="nombreUsuario" id="nombreUsuario" <%_ if(typeof data != "undefined"){ _%>value="<%=data.nombreusuario%>"<%_ }else{_%>disabled value="<%=user.nombre_usuario%>"<%_}_%>
            >

            <p>Email</p>
           
